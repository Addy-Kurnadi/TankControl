<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TankControl.View" x:Class="TankControl.View.Home" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
	Title="Home" Width="1000" Height="700">

    <Grid Width="1000" Height="700">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" IsMainMenu="True" Height="25" Width="1000">
            <MenuItem Header="_Dashboard" Click="Dashboard_Click" Name="Dashboard"/>
            <MenuItem Header="_Reporting" Click="Reporting_Click" Name="Reporting"/>
            <MenuItem Header="_Recipe" Click="Recipe_Click" Name="Recipe"/>
            <MenuItem Header="_User" Click="User_Click" Name="User"/>
        </Menu>

        <StackPanel Grid.Row="1"  x:Name="MainContainer" Height="675" Width="1000">
        	<local:Dashboard x:Name="dashboard_view" Height="675" Width="1000"/>
        </StackPanel>
    </Grid>

</Page>
